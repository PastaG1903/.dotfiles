#------------------------------------------------------------------------------#
# these settings are applied to all Logitech mice

[ids]
m:046d
32c2:0012

#------------------------------------------------------------------------------#
[main]

# Logitech MX Master 3S Mouse
mouse1 = overload(alpha,mouse1)
mouse2 = overload(beta,mouse2)
mouseforward = layer(gamma)

# Logitech G502 HERO Gaming Mouse
1 = overload(alpha,mouse1)
2 = overload(beta,mouse2)
3 = layer(gamma)
4 = volumedown
5 = volumeup
6 = M-d
7 = M-f

#------------------------------------------------------------------------------#
[alpha]
leftmouse = C-insert
rightmouse = S-insert

#------------------------------------------------------------------------------#
[beta]
leftmouse = playpause
rightmouse = nextsong

[alpha+beta]
leftmouse = S-delete
rightmouse = previoussong

#------------------------------------------------------------------------------#
[gamma:M]
leftmouse = volumedown
middlemouse = mute
rightmouse = volumeup

4 = brightnessdown
5 = brightnessup

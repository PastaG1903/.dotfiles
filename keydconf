#!/bin/bash

files=$(ls ~/.dotfiles/keyd/keyd/ | grep \\.)

cd ~/.dotfiles/keyd/keyd/

for file in $files; do
    newname=$(echo $file | sed "s/\.[^\.]*$//")
    mv $file $newname
done

newconf=$(gum choose $(ls ~/.dotfiles/keyd/keyd/))

mv $newconf $newconf".conf"

cd ~/.dotfiles/ && sudo stow -R keyd --target=/etc/
sudo keyd reload
